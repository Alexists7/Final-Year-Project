<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DesktopApp.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Sign Up">
    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">
        <Entry Text="{Binding Email}" Placeholder="Email" WidthRequest="400"/>
        <Entry Text="{Binding Username}" Placeholder="Username" WidthRequest="400"/>
        <Entry IsPassword="True" Text="{Binding Password}" Placeholder="Password" WidthRequest="400"/>
        <Button Command="{Binding SignUpCommand}" Text="Sign Up" />
        <Button Command="{Binding NavigateSignInCommand}" Text="Already have an account? Sign in" />
    </VerticalStackLayout>
</ContentPage>

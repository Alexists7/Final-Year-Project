<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DesktopApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DesktopApp"
    xmlns:pages="clr-namespace:DesktopApp.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="DesktopApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>
    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn"/>
    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp"/>
    <ShellContent
        Title="Display"
        ContentTemplate="{DataTemplate pages:DisplayPage}"
        Route="DisplayPage"/>
</Shell>
